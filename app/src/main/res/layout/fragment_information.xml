<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/h_back"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <ImageView
                android:id="@+id/h_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/h_back"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">



            </RelativeLayout>

        </RelativeLayout>

        <com.example.a95795.thegreenplant.HomeFragment.ItemView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:left_icon="@drawable/ic_nick_name"
            app:left_text="用户名"
            app:right_text="张三"
            />

        <com.example.a95795.thegreenplant.HomeFragment.ItemView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:left_icon="@drawable/ic_sex"
            app:left_text="性别"
            app:right_text="男" />


        <com.example.a95795.thegreenplant.HomeFragment.ItemView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:left_icon="@drawable/ic_telephone"
            app:left_text="手机号"
            app:right_text="" />



        <com.example.a95795.thegreenplant.HomeFragment.ItemView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:left_icon="@drawable/ic_job"
            app:left_text="职务"
            app:right_text="" />

        <com.example.a95795.thegreenplant.HomeFragment.ItemView
            android:id="@+id/workshop"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:left_icon="@drawable/ic_workshop"
            app:left_text="管理车间"
            app:right_text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你可以长按上方列表用户名项，获取更多用户信息。点击手机号项可更换号码"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>

        <ru.katso.livebutton.LiveButton
            xmlns:livebutton="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:textSize="26sp"
            livebutton:backgroundColor="#F57F76"
            livebutton:corners="4dp"
            livebutton:normalHeight="6dp"
            livebutton:pressedHeight="2dp"
            livebutton:shadowColor="#b16262"
            android:layout_marginBottom="6dp"/>
    </LinearLayout>



</FrameLayout>
