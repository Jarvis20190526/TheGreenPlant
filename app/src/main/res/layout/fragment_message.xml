<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutAnimation="@anim/list_layout_animation"
    tools:context="com.example.a95795.thegreenplant.register.MessageFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/about_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/toolbar_blue_theme">
        <android.support.v7.widget.Toolbar
            android:id="@+id/about_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#e5f9ff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="验证信息"
                android:textColor="#000000"
                android:textSize="30sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp"
        android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:layout_weight="1"
            android:background="#5fd4ff" />
        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:layout_weight="1"
            android:background="#5fd4ff" />
        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:layout_weight="1"
            android:background="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="23dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:text="工号:"
                android:textColor="#000"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/phonenumber_test"
                android:inputType="number"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="80dp"
                android:maxLength="11"
                android:ems="11" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="23dp"
            android:background="#ababab" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="23dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ID_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:text="身份证:"
                android:textColor="#000"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/ID_EditText"
                android:digits="1234567890Xx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginStart="80dp"
                android:maxLength="18"
                android:ems="18" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="23dp"
            android:background="#ababab" />
        <Button
            android:id="@+id/next"
            android:background="@drawable/code"
            android:layout_width="350dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="50dp"
            android:text="下一步" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:text="注册即代表阅读并同意" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#009270"
            android:text="使用条款" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:text="和" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#009270"
            android:text="隐私政策" />
    </LinearLayout>

</FrameLayout>
